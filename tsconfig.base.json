{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["src/*"],
    },
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["**/node_modules", "**/dist"]
}
