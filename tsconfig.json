{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["dev/src/**/*.{js,ts,jsx,tsx,d.ts,vue}", "packages/**/*.{js,ts,jsx,tsx,d.ts,vue}"],
  "exclude": ["**/node_modules", "**/dist"]
}
